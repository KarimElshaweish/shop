<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.root.shop.FristActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_login"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="54dp"
        app:srcCompat="@drawable/rr" />

    <Button
        android:id="@+id/btn_login"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="2in"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_newUser"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/buttonborder"
        android:text="تسجيل الدخول"
        android:textColor="#d03645"
        android:textSize="40dp" />

    <Button
        android:id="@+id/btn_newUser"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="2in"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_login"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_login"
        android:layout_marginBottom="70dp"
        android:background="@drawable/filledbutton"
        android:text="مستخدم جديد"
        android:textColor="#ffffff"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/txt_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:textColor="#d03645"
        android:text="حول متجر بصمه عرعر " />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/txt_about"
        android:layout_alignTop="@+id/txt_about"
        android:layout_toLeftOf="@+id/txt_about"
        android:layout_toStartOf="@+id/txt_about"
        app:srcCompat="@drawable/info" />


</RelativeLayout>